@model List<BooklyProject.Entities.Banner>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3>Banner</h3>

<table class="table table-bordered table-hover">
    <div>
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr></div>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="width:75px;height:75px" alt="Banner Görseli" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/Banner/DeleteBanner/@item.BannerId" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Sil</a></td>
            <td><a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-outline-info"><i class="fa fa-pen"></i>Güncelle</a></td>
        </tr>
    }

</table>
<td><a href="/Banner/AddBanner/" class="btn btn-outline-dark">Yeni Banner Ekle</a>   </td>
