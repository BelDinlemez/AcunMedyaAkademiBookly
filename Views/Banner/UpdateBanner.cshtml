@model BooklyProject.Entities.Banner
@{
    ViewBag.Title = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Banner Güncelle</h2>

<form method="post">
    <input type="hidden" name="BannerId" value="@Model.BannerId" />
    <label>Görsel Url</label>
    <input type="text" name="ImageUrl"  value="@Model.ImageUrl" class="form-control" required />
    <br />
    <label>Başlık</label>
    <input type="text" name="Title"   value="@Model.Title" class="form-control" required />
    <br />
    <label>Açıklama</label>
    <input type="text" name="Description"  value="@Model.Description" class="form-control" required />
    <br />
    <button class="btn btn-outline-dark"> <i class="fa fa-save"></i>Kaydet</button>
</form>
