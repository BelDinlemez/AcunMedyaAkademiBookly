@model BooklyProject.Entities.Banner
@{
    ViewBag.Title = "AddBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni Banner Ekle</h3>

<form method="post">
    <label>Görsel Url</label>
    <input type="text" name="ImageUrl" class="form-control" required />
    <br />
    <label>Başlık</label>
    <input type="text" name="Title" class="form-control" required />
    <br />
    <label>Açıklama</label>
    <input type="text" name="Description" class="form-control" required />
    <br />
    <button class="btn btn-outline-dark"> <i class="fa fa-save"></i>Kaydet</button>
</form>
